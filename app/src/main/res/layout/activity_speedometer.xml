<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.crazydude.androidgauge.GaugeView
            android:id="@+id/gaugage_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/speedometer_off"
            gauge:arrowColor="#FF00"
            gauge:arrowWidth="10"
            gauge:coefX="0.505"
            gauge:coefY="0.755"
            gauge:endLength="125dp" />

        <com.crazydude.androidgauge.GaugeView
            android:id="@+id/gaugage_fuel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/fuel_off"
            gauge:arrowColor="#FFFF00"
            gauge:arrowWidth="10"
            gauge:coefX="0.5"
            gauge:coefY="0.5" />

        <TextView
            style="@style/DigitalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122" />

